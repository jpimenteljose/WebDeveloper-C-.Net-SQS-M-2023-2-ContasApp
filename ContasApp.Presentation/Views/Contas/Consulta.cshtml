@* Definindo a classe de modelo de dados da página*@
@model ContasApp.Presentation.Models.ContasConsultaViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h5>Consulta de contas</h5>
<p>Informe um período de datas para consultar suas contas:</p>
<hr />

<form>

    <div class="row mb-2">
        <div class="col">
            @Html.TextBoxFor(model => model.DataInicio, new { @class="form-control", @type="date" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.DataInicio)
            </span>
        </div>
        <div class="col">
            @Html.TextBoxFor(model => model.DataFim, new { @class="form-control", @type="date" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.DataFim)
            </span>
        </div>
        <div class="col">
            <div>
                <input type="checkbox" checked /> Contas a receber
            </div>
            <div>
                <input type="checkbox" checked /> Contas a pagar
            </div>
        </div>
        <div class="col">
            <input type="submit" class="btn btn-success"
                   value="Pesquisar Contas" />
        </div>
    </div>

    <div class="table-responsive mb-2">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Valor</th>
                    <th>Tipo</th>
                    <th>Nome da conta</th>
                    <th>Categoria</th>
                    <th>Operações</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6">
                        Quantidade de contas obtidas: 0
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>

</form>
