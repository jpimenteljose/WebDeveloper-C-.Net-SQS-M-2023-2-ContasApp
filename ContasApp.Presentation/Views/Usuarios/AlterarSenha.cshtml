@* Definindo a classe de modelo de dados desta página *@
@model ContasApp.Presentation.Models.UsuariosAlterarSenhaModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h5>Alterar Senha de Acesso</h5>
<p>Utilize o formulário abaixo para alterar sua senha de acesso ao sistema.</p>
<hr/>

@using(Html.BeginForm())
{
    <div class="row mb-2">
        
        <div class="col">
            <label>Informe a sua senha atual:</label>
            @Html.PasswordFor(model => model.SenhaAtual, new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.SenhaAtual)
            </span>
        </div>

        <div class="col">
            <label>Informe sua nova senha:</label>
            @Html.PasswordFor(model => model.NovaSenha, new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.NovaSenha)
            </span>
        </div>

        <div class="col">
            <label>Confirme sua nova senha:</label>
            @Html.PasswordFor(model => model.NovaSenhaConfirmacao, new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.NovaSenhaConfirmacao)
            </span>
        </div>
        <br>
        <div class="row" mt-2>
            <div class="col">
                <input type="submit" class="btn btn-primary" value="Salvar Alterações"/>
            </div>
        </div>

    </div>

}